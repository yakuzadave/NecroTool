modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Necromunda Simulation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Necromunda Simulation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Necromunda Simulation Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Necromunda Tests"

[[workflows.workflow]]
name = "Start Necromunda Simulation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Necromunda Simulation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --test"
waitForPort = 5000

[[workflows.workflow]]
name = "Necromunda Simulation Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_necromunda.py"

[[workflows.workflow]]
name = "Necromunda Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_necromunda.py"

[deployment]
run = ["sh", "-c", "python main.py --test"]
